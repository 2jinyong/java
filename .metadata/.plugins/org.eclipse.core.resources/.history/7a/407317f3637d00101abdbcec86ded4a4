package sec02;

public class Phone {
	//필드
	public String model;
	public String color;
	
	//부모 생성자 선언
	public Phone() {
		System.out.println("부모 생성자 Phone 실행됨");
	}
	
	//메소드
	public void bell() {
		System.out.println("전화벨이 울립니다.");
	}
	public void sendVoic(String message) {
		System.out.println("나 : " + message);
	}
	public void receiveVoic(String message) {
		System.out.println("상대방 : " + message);
	}
	public void hangUp() {
		System.out.println("전화를 끊습니다.");
	}
	public Phone(String model, String color) {
		System.out.println("부모생성자 호출");
	}
}
