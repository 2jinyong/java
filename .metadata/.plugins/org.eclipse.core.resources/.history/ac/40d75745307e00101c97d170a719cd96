package sec05;

import java.util.Scanner;

public class VendingMachineExam {

	public static void main(String[] args) {
		//필드 VendingMachine 인스턴스 생성
		VendingMachine vm = new VendingMachine();
		
		//음료 객체 생성해서 자판기에 넣기
		Coke coke1 = new Coke(1500, "높음");
		Coke coke2 = new Coke(1800,"무가당");
		
		Coffe coffe1 = new Coffe(1200, true);
		Coffe coffe2 = new Coffe(1200, false);
		
		vm.addBeverage(coke1);
		vm.addBeverage(coke2);
		vm.addBeverage(coffe1);
		vm.addBeverage(coffe2);
		
		//Scanner를 만들어 사용자 요청 받기
		Scanner sc = new Scanner(System.in);
		int selectedNumber;
		int insertedMoney;
		while(true) {
			//메뉴표시
			vm.displayMenu();
			try {
				System.out.println("음료 번호를 선택하세요.");
			}catch(Exception e) {
				System.out.println("잘못된 입력입니다. 숫자만 입력해주세요.");
				sc.next(); //잘못된 입력을 버림
			}
			System.out.println(); //줄 바꿈
			
		}
		
		sc.next();
	}

}
